// Import all partials
@require './_*.styl'

.site-header
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content space-between
  background-color gold
  .site-name
    font-weight 100
    font-size 4rem
    letter-spacing -1px
    text-shadow 0px 4px 0 rgba(18,86,136,0.11)
  .name-tagline
    padding 10px
  .order-link
    align-self center
    padding 0
    border 0
    margin auto
  >*
    text-align center

// This is button code downloaded from a website
button
  box-shadow inset 0px 1px 0px 0px #ffffff
  background linear-gradient(to bottom, #ffffff 5%, #f6f6f6 100%)
  background-color #ffffff
  border-radius 6px
  border 1px solid #dcdcdc
  cursor pointer
  color #666666
  padding 14px 24px

button hover
  background linear-gradient(to bottom, #f6f6f6 5%, #ffffff 100%)
  background-color #f6f6f6

button active
  position relative
  top 1px

